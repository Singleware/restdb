{
  "author": {
    "name": "Silas B. Domingos",
    "email": "hello@balmante.eti.br",
    "url": "https://balmante.eti.br"
  },
  "name": "@singleware/restdb",
  "description": "Singleware RestDB driver package.",
  "license": "MIT",
  "version": "1.2.13",
  "main": "release/source/index.js",
  "types": "release/types/index.d.ts",
  "keywords": [
    "rest api",
    "rest driver",
    "rest mapper",
    "async restdb client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/singleware/restdb"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@singleware/class": "^1.1.19",
    "@singleware/mapping": "^1.2.39",
    "@singleware/observable": "^1.0.21",
    "@singleware/path": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^11.13.7",
    "prettier": "^1.17.0",
    "typescript": "^2.9.2"
  },
  "prettier": {
    "printWidth": 240,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "scripts": {
    "build": "npm run make-source && npm run make-examples",
    "make-source": "npx tsc -p ./source && npm run update",
    "make-examples": "npx tsc -p ./examples",
    "update": "npm run update-root && npm run update-request && npm run update-response",
    "update-root": "cp -Rf ./source/*.d.ts ./release/types",
    "update-request": "cp -Rf ./source/request/*.d.ts ./release/types/request",
    "update-response": "cp -Rf ./source/response/*.d.ts ./release/types/response"
  }
}
